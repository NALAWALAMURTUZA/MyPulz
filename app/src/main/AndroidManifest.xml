<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mypulz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.mypulz.UICore.Security.SplashActivity"
            android:label="@string/title_activity_splash"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UICore.Security.AnotherActivity"
            android:label="@string/title_activity_another"
           />
        <activity
            android:name=".UICore.Security.LoginActivity"
            android:label="@string/title_activity_login"
           />
        <activity
            android:name=".UICore.Security.SignupActivity"
            android:label="@string/title_activity_signup"
            />
    </application>

</manifest>
