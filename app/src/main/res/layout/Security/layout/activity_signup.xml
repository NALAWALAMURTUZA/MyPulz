<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mypulz.UICore.Security.SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="@mipmap/ic_splashscreen"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding1">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter First Name"
            android:background="@drawable/field_back"
            android:textColor="#000000"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor_colour"
            android:textSize="@dimen/textsize2"
            android:padding="@dimen/padding1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <!--android:text="pprasoon"-->
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Last Name"
            android:background="@drawable/field_back"
            android:textColor="#000000"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor_colour"
            android:textSize="@dimen/textsize2"
            android:padding="@dimen/padding1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile Number"
            android:background="@drawable/field_back"
            android:textColor="#000000"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor_colour"
            android:textSize="@dimen/textsize2"
            android:padding="@dimen/padding1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:background="@drawable/field_back"
            android:textColor="#000000"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor_colour"
            android:textSize="@dimen/textsize2"
            android:padding="@dimen/padding1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <!--android:text="1234"-->

        <RadioGroup
            android:id="@+id/radioUserType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <RadioButton android:id="@+id/radio_pirates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize2"
                android:text="User"
                android:layout_weight="2"/>
            <RadioButton android:id="@+id/radio_ninjas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Docter"
                android:textSize="@dimen/textsize2"
                android:layout_weight="2"

                />
        </RadioGroup>


        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding1"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_back"
            android:gravity="center"
            android:textSize="@dimen/textsize2"/>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>
